<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClipSync.Maui.Pages.WelcomePage"
             >

    <ContentPage.Resources>
        <ResourceDictionary>            
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource CopilotCream}"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontFamily" Value="Poppins-SemiBold"/>
            </Style>

            <Style TargetType="Button">                
                <Setter Property="FontFamily" Value="Poppins-SemiBold"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label Text="An app to help copy text across devices" HorizontalOptions="Center"/>
        
        <Button Text="Register"/>
        <Button Text="Login"/>
    </VerticalStackLayout>

</ContentPage>